<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="29dp"
        android:layout_marginTop="30dp"
        android:text="next" />

    <Button
        android:id="@+id/play_sound_button"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@+id/next_button"
        android:layout_marginLeft="79dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="71dp"
        android:layout_toLeftOf="@+id/next_button"
        android:gravity="bottom" />

    <TextView
        android:id="@+id/preview_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/next_button"
        android:text="" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="53dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/hint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_text"
        android:layout_marginBottom="17dp"
        android:layout_toRightOf="@+id/play_sound_button"
        android:text="use hint" />

    <TextView
        android:id="@+id/hinttext"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hint_button"
        android:layout_toRightOf="@+id/preview_stage"
        android:text="15"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/hint_button"
        android:text="remaining hints"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
